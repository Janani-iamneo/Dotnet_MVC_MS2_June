<form asp-action="SortByAge" asp-controller="Pet" method="get">
    <button class="btn btn-outline-secondary" type="submit">Sort by Age</button>
</form>


<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Age</th>
            <th>Availability</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pet in Model)
        {
            <tr>
                <td>@pet.Name</td>
                <td>@pet.Type</td>
                <td>@pet.Age</td>
                <td>
                    @if (pet.Availability)
                    {
                        <span class="text-success">Available</span>
                    }
                    else
                    {
                        <span class="text-danger">Adopted</span>
                    }
                </td>
                <td>
                    @if (pet.Availability)
                    {
                        <a href="@Url.Action("PetAdopter", "PetAdoption", new { petId = pet.PetID })" class="btn btn-primary">Adopt</a>
                    }
                    else if (pet.PetAdoptions != null && pet.PetAdoptions.Any())
                    {
                        <a href="@Url.Action("Details", "PetAdoption", new { adopterId = pet.PetAdoptions.First().PetAdopterID })" class="btn btn-info">Details</a>
                    }
                    <a href="@Url.Action("Delete", "Pet", new { petId = pet.PetID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
