@model List<dotnetapp.Models.Pet>

<h1>Pet Adoption</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<!-- Add search form -->
<form asp-action="Search" asp-controller="PetAdoption" method="get">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Search by name..." name="name">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            @* <th>Pet ID</th> *@
            <th>Name</th>
            <th>Type</th>
            <th>Age</th>
            <th>Availability</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pet in Model)
        {
            <tr>
                @* <td>@pet.PetID</td> *@
                <td>@pet.Name</td>
                <td>@pet.Type</td>
                <td>@pet.Age</td>
                <td>
                    @if (pet.Availability)
                    {
                        <span class="text-success">Available</span>
                    }
                    else
                    {
                        <span class="text-danger">Adopted</span>
                    }
                </td>
                <td>
                    @if (pet.Availability)
                    {
                        <a id="adoptButton" href="@Url.Action("Adopt","PetAdoption", new { petId = pet.PetID })" class="btn btn-primary">Adopt</a>
                    }
                    else if (pet.PetAdopters != null && pet.PetAdopters.Any())
                    {
                        <a id="detailsButton" href="@Url.Action("Details","PetAdoption", new { adopterId = pet.PetAdopters.First().PetAdopterID })" class="btn btn-info">Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
